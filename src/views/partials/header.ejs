<div class="z-10 sticky top-0 bg-white w-full h-16 px-6 shadow-head flex items-center justify-between">
  <button onclick="sidebarToggle()">
    <i class="my-auto" data-feather="menu"></i>
  </button>
  <div class="flex items-center">
    <form class="flex mr-6" action="<%= url %>" method="get">
      <input class="input-primary w-auto" type="text" name="keyword" placeholder="Search">
      <button class="btn-outline" type="submit">Search</button>
    </form>

    <div class="relative">
      <!-- Dropdown toggle button -->
      <button id="dropdown-btn" class="cursor-pointer flex items-center">
        <div class="w-9 h-9 rounded-full bg-darkblue01 font-bold flex items-center justify-center">U</div>
        <p class="text-sm mx-2">Unis Badri</p>
        <i class="my-auto" data-feather="chevron-down"></i>
      </button>
      <!-- Dropdown list -->
      <div id="dropdown-list" class="hidden absolute right-0 py-2 mt-2 bg-white rounded-md shadow-xl w-44">
        <a href="/logout" class="cursor-pointer block px-4 py-2 text-sm text-neutral05 hover:bg-danger hover:text-white">
          Logout
        </a>
      </div>
    </div>
  </div>
</div>