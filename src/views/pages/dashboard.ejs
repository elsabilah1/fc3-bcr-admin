<h1 class="text-xl font-bold mb-6 capitalize">Dashboard</h1>

<!-- list order -->
<div class="mb-10">
  <h2 class="text-sm font-bold border-l-4 border-darkblue04 pl-2 mb-4">List Order</h2>
  <%- include('../partials/table-order',{orderTitles, orders}) %>
  <div class="flex justify-between mt-10">
    <!-- pagination -->
  </div>
</div>

<!-- list car -->
<div class="mb-10">
  <h2 class="text-sm font-bold border-l-4 border-darkblue04 pl-2 mb-4">List Car</h2>
  <%- include('../partials/table-car',{carTitles, cars }) %>
  <div class="flex justify-between mt-10">
    <!-- pagination -->
  </div>
</div>

<!-- datatables -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js" type="text/javascript"></script>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>

<script>
  $(document).ready(function() {
    $('#table-order').DataTable({
      searching: false,
      info: false,
      pagingType: 'simple_numbers',
      dom: '<"top"i>rt<"bottom"flp><"clear">'
    });
  });
  $(document).ready(function() {
    $('#table-car').DataTable({
      searching: false,
      info: false,
      pagingType: 'simple_numbers',
      dom: '<"top"i>rt<"bottom"flp><"clear">'
    });
  });
</script>